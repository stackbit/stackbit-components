{
    "name": "@stackbit/components",
    "version": "0.1.49",
    "description": "Stackbit components library",
    "keywords": [
        "stackbit",
        "components"
    ],
    "main": "./dist/index.js",
    "files": [
        "dist",
        "!dist/storybook-polyfills",
        "!dist/.tsbuildinfo",
        "models",
        "src",
        "styles",
        "!**/.DS_Store",
        "sourcemap.patch"
    ],
    "scripts": {
        "dev": "node ./scripts/build-storybook.js && start-storybook -s ./public -p 6006",
        "build": "node ./scripts/build-storybook.js && build-storybook -s ./public",
        "dist": "./scripts/build-dist.js --clean",
        "dist-local": "./scripts/build-dist.js --local",
        "build:ts": "rm -rf dist && tsc",
        "dev:ts": "tsc --watch",
        "lint": "eslint src",
        "prettier": "prettier --write src scripts",
        "version-minor": "npm version minor -m \"bumped version to v%s\"",
        "version-patch": "npm version patch -m \"bumped version to v%s\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stackbit/stackbit-components.git"
    },
    "author": "Stackbit Inc.",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/stackbit/stackbit-components/issues"
    },
    "homepage": "https://components.stackbit.com/",
    "dependencies": {
        "axios": "^0.21.1",
        "classnames": "^2.3.1",
        "dayjs": "^1.10.6",
        "markdown-to-jsx": "^7.1.3"
    },
    "devDependencies": {
        "@stackbit/cli": "^0.1.14",
        "@storybook/addon-actions": "^6.2.9",
        "@storybook/addon-docs": "^6.3.7",
        "@storybook/addon-essentials": "^6.2.9",
        "@storybook/addon-links": "^6.2.9",
        "@storybook/addon-postcss": "^2.0.0",
        "@storybook/react": "^6.3.7",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "concurrently": "^6.2.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "fs-extra": "^10.0.0",
        "js-yaml": "^4.1.0",
        "npm-watch": "^0.11.0",
        "postcss": "^8.3.6",
        "postcss-nested": "^5.0.6",
        "prettier": "2.3.0",
        "prism-react-renderer": "^1.2.1",
        "react": "^17.0.2",
        "react-copy-to-clipboard": "^5.0.4",
        "react-dom": "^17.0.2",
        "react-helmet": "^6.1.0",
        "react-tabs": "^3.2.2",
        "tailwindcss": "^2.2.7",
        "typescript": "^4.4.4"
    },
    "peerDependencies": {
        "react": ">=17",
        "next": ">=11.1"
    }
}
