{
  "name": "@stackbit/components",
  "version": "0.1.13",
  "description": "Stackbit components library",
  "private": true,
  "keywords": [
    "stackbit",
    "components"
  ],
  "main": "index.js",
  "watch": {
    "build-dist-local": {
      "patterns": [
        "src/base/**/*.js",
        "src/components/**/*.js",
        "src/layouts/**/*.js",
        "themes/**/*.js"
      ],
      "extensions": "js,jsx",
      "quiet": false,
      "delay": 2500
    }
  },
  "scripts": {
    "develop": "./develop.sh",
    "storybook": "./scripts/generate-storybook-dynamic.js && start-storybook -s ./public -p 6006",
    "build-themes": "./scripts/build-themes.js",
    "build-storybook": "./scripts/generate-storybook-dynamic.js && build-storybook -s ./public",
    "build-models": "./scripts/build-models.js",
    "build": "npm run build-themes && npm run build-storybook",
    "build-dist": "./scripts/build-dist.js --clean",
    "build-dist-local": "./scripts/build-dist.js && ./scripts/build-models.js --local",
    "validate": "stackbit validate",
    "pretty": "prettier --write src",
    "version-minor": "npm version minor -m \"bumped version to v%s\"",
    "version-patch": "npm version patch -m \"bumped version to v%s\"",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stackbit/components.git"
  },
  "author": "Stackbit Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stackbit/components/issues"
  },
  "homepage": "https://components.stackbit.com/",
  "dependencies": {
    "classnames": "^2.3.1",
    "dayjs": "^1.10.6",
    "markdown-to-jsx": "^7.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@stackbit/cli": "^0.1.14",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-docs": "^6.3.7",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.3.7",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fs-extra": "^10.0.0",
    "js-yaml": "^4.1.0",
    "npm-watch": "^0.11.0",
    "postcss": "^8.3.4",
    "prettier": "2.3.0",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.4",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "tailwindcss": "^2.2.7"
  },
  "peerDependencies": {
    "react": ">=16"
  }
}
